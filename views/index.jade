extends layout

block content
  div.container
    div.row.header
      div.col-md-5
        h1= title
      div.col-md-7
        ul.nav.nav-pills.pull-right
          - var routes = ['Visualization', 'Benchmarking', 'Source'];
          - for (var i = 0; i < routes.length; ++i)
            li(data-ng-class='isActive("#{routes[i].toLowerCase()}") ? "nav-active": ""')
              a(href="/#{routes[i].toLowerCase()}"). #{routes[i]}
          
    hr
    img#loader(src='img/ajax-loader.gif')
    ng:view
    
